# Project Name
ARTIFACT=bedrock-examples
VERSION=0.30.0
JAR_FILE=target/$(ARTIFACT)-$(VERSION).jar

# Basic Maven Commands
MVN_CLEAN=mvn clean
MVN_PACKAGE=mvn package
MVN_TEST=mvn test

.PHONY: all clean test package run

all: package

clean:
	@echo "Cleaning up generated files and directories..."
	$(MVN_CLEAN)

test:
	@echo "Running unit tests..."
	$(MVN_TEST)

package:
	@echo "Building the package and creating the jar file..."
	$(MVN_PACKAGE)

run:
	@echo "Running BedrockAnthropicChatModelExample..."
	mvn -q exec:java

help:
	@echo "Available options:"
	@echo "   make        - Builds the project by default."
	@echo "   make clean  - Removes files generated by previous builds."
	@echo "   make test   - Runs the project's unit tests."
	@echo "   make package - Compiles the project and creates the jar file."
	@echo "   make run    - Runs the main class BedrockAnthropicChatModelExample."
	@echo "   make help   - Displays this help message."
